@model IEnumerable<VM.ViewModels.BranchVM>
@{
    ViewBag.Title = "قائمة الفروع";
    Layout = "_Layout";
}

<h2 class="text-center">قائمة الفروع</h2>
<hr />
@* الموظف الواحد  *@
<a href="@Url.Action("CreateEdite", "Branches", new { TypePage = 1, area = "LookUP" })" class="btn btn-primary btn-sm">
    إنشاء فرع جديدة
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الحالة</th>
            <th>الاجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NameAr</td>
                <td>
                    @if (item.IsActive == false)
                    {
                        <span class="text-success">غير نشط</span>
                        <input type="checkbox" class="activateLeave" data-id="@item.Id" />
                    }
                    else if (item.IsActive == true)
                    {
                        <span class="text-success">نشط</span>
                    }
                    else
                    {
                        <span class="text-success">--</span>
                    }
                </td>
                <td>

                    <a href="@Url.Action("CreateEdite", "Branches", new { TypePage = 2, BranchID = item.Id, area = "LookUP" })" class="btn btn-primary btn-sm">
                        تعديل
                    </a>
                    
                    <a href="@Url.Action("CreateEdite", "Branches", new { TypePage = 3, BranchID = item.Id, area = "LookUP" })" class="btn btn-primary btn-sm">
                        عرض
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
          $(document).ready(function () {
            $(".activateLeave").change(function () {
                var checkbox = $(this);
                var leaveId = checkbox.data("id");

                if (confirm("هل أنت متأكد من تفعيل هذا الفرع / هذه المحافظة ؟")) {
                    $.ajax({
                        url: '@Url.Action("ActivateBranch", "Branches", new { area = "LookUP" })',
                        type: 'POST',
                        data: { id: leaveId },
                        success: function (response) {
                            if (response.success) {
                                  window.location.href = response.redirectUrl;
                            } else {
                                alert(response.message || "حدث خطأ أثناء تفعيل هذا الفرع / هذه المحافظة");
                                checkbox.prop("checked", false);
                            }
                        },
                        error: function () {
                            alert("حدث خطأ أثناء الاتصال بالخادم");
                            checkbox.prop("checked", false);
                        }
                    });
                } else {
                    checkbox.prop("checked", false);
                }
            });
        });

    </script>
}
