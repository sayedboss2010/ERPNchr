@model VM.ViewModels.EmployeeVM

@{
    ViewData["Title"] = "تفاصيل الموظف";
    Layout = "_Layout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">الرئيسية /</span> تفاصيل الموظف
    </h4>

    <div class="row">
        <!-- بيانات الموظف -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">بيانات الموظف</h5>
                </div>

                <div class="card-body">

                    <div class="mb-3">
                        <label class="fw-bold">كود الموظف:</label>
                        <div class="form-control bg-light">@Model.EmpCode</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">اسم الموظف:</label>
                        <div class="form-control bg-light">@Model.NameAr</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">الرقم القومي:</label>
                        <div class="form-control bg-light">@Model.Nid</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">ملف البطاقة:</label><br />
                        @if (!string.IsNullOrEmpty(Model.NidPath))
                        {
                            <a href="@Model.NidPath" target="_blank"
                               class="btn btn-info">تحميل البطاقة</a>
                        }
                        else
                        {
                            <span class="text-danger">لا يوجد ملف</span>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">البريد الإلكتروني:</label>
                        <div class="form-control bg-light">@Model.Email</div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">الرقم السري:</label>
                        <div class="form-control bg-light">@Model.Password</div>
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">الهاتف:</label>
                        <div class="form-control bg-light">@Model.PhoneNumber</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">العنوان:</label>
                        <div class="form-control bg-light">@Model.AddressAr</div>
                    </div>

                </div>
            </div>
        </div>

        <!-- بيانات الوظيفة -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">البيانات الوظيفية</h5>
                </div>

                <div class="card-body">

                    <div class="mb-3">
                        <label class="fw-bold">تاريخ التعيين:</label>
                        <div class="form-control bg-light">
                            @(Model.AppointmentDate?.ToString("yyyy-MM-dd"))
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">الإدارة:</label>
                        <div class="form-control bg-light">@Model.DepartmentName</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">المحافظة / الفرع:</label>
                        <div class="form-control bg-light">@Model.BranchName</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">الوظيفة الحالية:</label>
                        <div class="form-control bg-light">@Model.JobName</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">نوع الموظف:</label>
                        <div class="form-control bg-light">@Model.EmolyeetypeName</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">الحالة:</label>
                        <div class="form-control bg-light">
                            @(Model.IsActive ? "نشط" : "غير نشط")
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
