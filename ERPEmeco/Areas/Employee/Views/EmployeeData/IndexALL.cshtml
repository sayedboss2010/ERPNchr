@model IEnumerable<VM.ViewModels.EmployeeVM>
@{
    ViewBag.Title = "قائمة الموظفين";
    Layout = "_Layout";
}

<h2 class="text-center">قائمة الموظفين</h2>
<hr />


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>الاسم</th>
            <th>الكود</th>
            <th>الرقم القومي</th>
            <th>الاميل</th>
            <th>الحالة</th>
            <th colspan="2">الاجراء</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.NameAr</td>
                <td>@item.EmpCode</td>
                <td>@item.Nid</td>
                <td>@item.Email</td>
                <td>
                    @if (item.IsActive == true)
                    {
                        <span class="text-success">فعال</span>
                    }
                    else if (item.IsActive == false)
                    {
                        <span class="text-danger">غير فعال</span>
                    }
                    else
                    {
                        <span class="text-warning">لم يتم النظر</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Index", "Home", new { EmployeeID = item.Id, area = "Account" })"
                       class="btn btn-info btn-sm">عرض</a>
                </td>
                <td>
                    <a href="@Url.Action("AddEdite", "EmployeeData", new { EmployeeID = item.Id, area = "Employee" })"
                       class="btn btn-info btn-sm">تعديل</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

<a href="@Url.Action("AddEdite", "EmployeeData", new { area = "Employee" })" class="btn btn-primary">إضافة موظف جديد</a>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".activateLeave").change(function () {
                var checkbox = $(this);
                var leaveId = checkbox.data("id");

                if (confirm("هل أنت متأكد من تفعيل هذه الإجازة؟")) {
                    $.ajax({
                        url: '@Url.Action("ActivateLeave", "Leave", new { area = "Employee" })',
                        type: 'POST',
                        data: { id: leaveId },
                        success: function (response) {
                            if (response.success) {
                                checkbox.replaceWith('<span class="text-success">تم القبول</span>');
                            } else {
                                alert("حدث خطأ أثناء تفعيل الإجازة");
                                checkbox.prop("checked", false);
                            }
                        },
                        error: function () {
                            alert("حدث خطأ أثناء الاتصال بالخادم");
                            checkbox.prop("checked", false);
                        }
                    });
                } else {
                    checkbox.prop("checked", false);
                }
            });
        });
    </script>
}
