@model IEnumerable<VM.ViewModels.Employee.EmployeeMissionsVM>
@{
    ViewBag.Title = "قائمة المأموريات";
    Layout = "_Layout";
}

<h2 class="text-center">قائمة المأموريات</h2>
<hr />


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الموظف</th>
            <th>الادارة</th>
            <th>تاريخ بداية المأمورية</th>
            <th>تاريخ نهاية المأمورية</th>
            <th>جهةالمأمورية</th>
            <th>الغرض من المأمورية</th>
               <th> حالة المأمورية</th>
            <th>خيارات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmplyeeName</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.StartDate?.ToString("yyyy/MM/dd")</td>
                    <td>@item.EndDate?.ToString("yyyy/MM/dd")</td>
                    <td>@item.AuthorityOfMission</td>
                    <td>@item.PurposeOfMission</td>
                     @{
    var req = Context.Request;
    int currentUserType = req.Cookies.ContainsKey("UserType")
                          ? int.Parse(req.Cookies["UserType"])
                          : 0;
}

<td>
    <span> حالة الماموية  :</span>

    @* ============================
       1) الموظف العادي (UserType = 1)
       ============================ *@

                    @* =======================
                       الموظف العادي
                       ======================= *@
                    @if (currentUserType == 1)
                    {
                        <div>
                            المدير المباشر:
                            @if (item.DirectManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DirectManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <span class="text-warning">في انتظار موافقة المدير المباشر</span>
                            }
                        </div>

                        <div>
                            مدير القطاع:
                            @if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <span class="text-warning">في انتظار موافقة مدير القطاع</span>
                            }
                        </div>
                    }

                    @* =======================
                       المدير المباشر
                       ======================= *@
                    else if (currentUserType == 2)
                    {
                        @* لو مامورية ماموريته هو → لا يوافق *@
                        if (item.EmployeeUserType == 2)
                        {
                            if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول من مدير القطاع</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض من مدير القطاع</span>
                            }
                            else
                            {
                                <span class="text-warning">في انتظار موافقة مدير القطاع</span>
                            }
                        }
                        else
                        {
                            @* ماموية موظف عادي *@
                            if (item.DirectManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DirectManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <button class="btn btn-success approveBtn" data-id="@item.Id"  data-type="direct" >قبول</button>
                                <button class="btn btn-danger rejectBtn" data-id="@item.Id"  data-type="direct" >رفض</button>
                            }
                        }
                    }

                    @* =======================
                       مدير القطاع
                       ======================= *@
                    else if (currentUserType == 3)
                    {
                        @* ماموية مدير مباشر *@
                        if (item.EmployeeUserType == 2)
                        {
                            if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <button class="btn btn-success approveBtn" data-id="@item.Id"  data-type="sector" >قبول</button>
                                <button class="btn btn-danger rejectBtn" data-id="@item.Id"  data-type="sector" >رفض</button>
                            }
                        }
                        else if (item.EmployeeUserType == 3)
                        {
                            if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <button class="btn btn-success approveBtn" data-id="@item.Id"  data-type="sector" >قبول</button>
                                <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-type="sector">رفض</button>
                            }
                        }
                            else
                        {
                            @* ماموية موظف عادي *@
                            if (item.DirectManagerApproval == null)
                            {
                                <span class="text-warning">
                                    في انتظار موافقة المدير المباشر
                                </span>
                            }
                            else
                            {
                                if (item.DepartmentManagerApproval == true)
                                {
                                    <span class="text-success">تم القبول</span>
                                }
                                else if (item.DepartmentManagerApproval == false)
                                {
                                    <span class="text-danger">تم الرفض</span>
                                }
                                else
                                {
                                     <button class="btn btn-success approveBtn" data-id="@item.Id"  data-type="sector" >قبول</button>
                                    <button class="btn btn-danger rejectBtn" data-id="@item.Id"  data-type="sector" >رفض</button>
                                }
                            }
                        }
                    }
                </td>                   
                
                <td>
                        <a href="@Url.Action("PrintMissionNew", "EmployeeMission", new { id = item.Id, area = "Employee" })" class="btn btn-info btn-sm">طباعة</a>
                    </td>
                </tr>
            }

        }
        </tbody>
</table>

<a href="@Url.Action("Create", "EmployeeMission", new { area = "Employee" })" class="btn btn-primary">إضافة مأمورية</a>

@section Scripts {
    <script>
        $(document).ready(function () {
               $(".approveBtn, .rejectBtn").click(function () {
    var id = $(this).data("id");
    var type=$(this).data("type");
    var isApproved = $(this).hasClass("approveBtn");

    $.post("/Employee/EmployeeMission/DirectManagerAction",
        { id: id, isApproved: isApproved,type:type },
       
        function (response) {
            alert(response.message);
            if (response.success) {
                location.reload();
            }
        });
});


            $(".activateLeave").change(function () {
                var checkbox = $(this);
                var leaveId = checkbox.data("id");

                if (confirm("هل أنت متأكد من تفعيل هذه الماموية؟")) {
                    $.ajax({
                        url: '@Url.Action("ActivateLeave", "Leave", new { area = "Employee" })',
                        type: 'POST',
                        data: { id: leaveId },
                        success: function (response) {
                            if (response.success) {
                                checkbox.replaceWith('<span class="text-success">تم القبول</span>');
                            } else {
                                alert("حدث خطأ أثناء تفعيل الماموية");
                                checkbox.prop("checked", false);
                            }
                        },
                        error: function () {
                            alert("حدث خطأ أثناء الاتصال بالخادم");
                            checkbox.prop("checked", false);
                        }
                    });
                } else {
                    checkbox.prop("checked", false);
                }
            });
        });
    </script>
}
