@model VM.ViewModels.Employee.EmployeeMissionsVM
@{
    Layout = "_Layout";
}
<meta charset="utf-8">
<title> مأمورية رسمية - @Model.EmplyeeName</title>

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: #f6f6f6;
        margin: 0;
        padding: 0;
    }

    .page {
        width: 100%;
        max-width: 900px;
        margin: 20px auto;
        background: #fff;
        border: 2px solid #000;
        padding: 12px 16px;
        box-sizing: border-box;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
    }

    .logo {
        width: 150px;
        height: 90px;
        border: 1px solid #000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .logo img {
            max-width: 100%;
            max-height: 100%;
        }

    .header-text {
        flex: 1;
        text-align: center;
    }

        .header-text h1 {
            margin: 0;
            font-size: 22px;
            font-weight: 700;
        }

    .header-meta {
        font-size: 13px;
        color: #555;
    }

    .form-grid {
        border: 1px solid #000;
        padding: 8px;
        margin-top: 8px;
    }

    .row {
        display: flex;
        margin-bottom: 6px;
    }

    .col {
        flex: 1;
        display: flex;
        flex-direction: column;
        font-size: 15px;
    }

    label.field {
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 2px;
    }

    .no-print {
        text-align: center;
        margin: 20px;
    }

    @@media print {
        body * {
            visibility: hidden;
        }

        .page, .page * {
            visibility: visible;
        }

        .page {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            border: 2px solid #000;
        }

        .no-print {
            display: none !important;
        }
    }
</style>

<!-- زر الطباعة -->
<div class="no-print">
    <button onclick="window.print()">🖨️ طباعة النموذج</button>
</div>

<div class="page">
    <header>
        <div class="logo"><img src="~/assets/img/Logo/lg.png" alt="Logo"></div>

        <div class="header-text">
            <h1>مأمورية رسمية</h1>
            <div class="header-meta">
                نظام الموارد البشرية • تاريخ الطباعة:
                <strong>@DateTime.Now.ToString("yyyy/MM/dd")</strong>
            </div>
        </div>
    </header>

    <div class="form-grid">

        <!-- بيانات الموظف -->
        <div class="row">
            <div class="col-6">
                <label class="field">الموظف:</label>
                <span>@Model.EmplyeeName</span>
            </div>
            <div class="col-6">
                <label class="field">الادارة:</label>
                <span>@Model.DepartmentName</span>
            </div>
        </div>
        <div class="row">
            <div col-12>
                <label class="field">جهة المأمورية:</label>
                <span>@Model.AuthorityOfMission</span>
            </div>
          
        </div>
        <div class="row">
            <div col-12>
                <label class="field">الغرض من المأمورية:</label>
                <span>@Model.PurposeOfMission</span>
            </div>

        </div>
        <div class ="row">
            <div class="col-6">
                <label class="field">تاريخ بداية المأمورية:</label>
                <span>@Model.StartDate?.ToString("yyyy/MM/dd")</span>
            </div>

            <div class="col-6">
                <label class="field">تاريخ نهاية المأمورية:</label>
                <span>
                    @Model.EndDate?.ToString("yyyy/MM/dd")
                </span>
            </div>
        </div>

       
        <!-- توقيعات -->
        <div class="row" style="margin-top:25px;">
            <div class="col">توقيع الموظف: ____________________</div>
            <div class="col">موافقة المدير المباشر: ____________________</div>
            <div class="col">اعتماد الإدارة: ____________________</div>
        </div>

    </div>
</div>
