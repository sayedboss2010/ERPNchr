@model VM.ViewModels.EmployeeLeaveVM
@{
    Layout = "_Layout";
}

<meta charset="utf-8">
<title>نموذج طلب إجازة - @Model.LeaveTypeName</title>

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: #f6f6f6;
        margin: 0;
        padding: 0;
    }

    .page {
        width: 100%;
        max-width: 900px;
        margin: 20px auto;
        background: #fff;
        border: 2px solid #000;
        padding: 12px 16px;
        box-sizing: border-box;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
    }

    .logo {
        width: 150px;
        height: 90px;
        border: 1px solid #000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .logo img {
            max-width: 100%;
            max-height: 100%;
        }

    .header-text {
        flex: 1;
        text-align: center;
    }

        .header-text h1 {
            margin: 0;
            font-size: 22px;
            font-weight: 700;
        }

    .header-meta {
        font-size: 13px;
        color: #555;
    }

    .form-grid {
        border: 1px solid #000;
        padding: 8px;
        margin-top: 8px;
    }

    .row {
        display: flex;
        margin-bottom: 6px;
    }

    .col {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    label.field {
        font-weight: 600;
        font-size: 13px;
        margin-bottom: 2px;
    }

    table.details {
        width: 60%;
        margin: 10px auto;
        border-collapse: collapse;
        font-size: 13px;
    }

        table.details th, table.details td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
        }

        table.details th {
            background: #eee;
            font-weight: 600;
        }

    .no-print {
        text-align: center;
        margin: 20px;
    }

    .attachment-box {
        border: 1px dashed #888;
        padding: 10px;
        margin-top: 10px;
        text-align: center;
    }

    .attachment-img {
        max-width: 100%;
        max-height: 450px;
        border: 1px solid #555;
    }

    /* الطباعة */
    @@media print {
        body * {
            visibility: hidden;
        }

        .page, .page * {
            visibility: visible;
        }

        .page {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            border: 2px solid #000;
        }

        .no-print {
            display: none !important;
        }
    }
</style>

<!-- زر الطباعة -->
<div class="no-print">
    <button onclick="window.print()">🖨️ طباعة النموذج</button>
</div>

<div class="page">
    <header>
        <div class="logo"><img src="~/assets/img/Logo/lg.png" alt="Logo"></div>

        <div class="header-text">
            <h1>طلب إجازة — @Model.LeaveTypeName</h1>
            <div class="header-meta">
                نظام الموارد البشرية • تاريخ: <strong>@DateTime.Now.ToString("yyyy/MM/dd")</strong>
            </div>
        </div>
    </header>

    <div class="form-grid">

        <!-- بيانات الموظف -->
        <div class="row">
            <div class="col">
                <label class="field">الاسم:</label>
                <span>@Model.EmployeeName</span>
            </div>
            <div class="col">
                <label class="field">الوظيفة:</label>
                <span>@Model.EmployeeTypeName</span>
            </div>
            <div class="col">
                <label class="field">الرقم:</label>
                <span>@Model.EmployeeCode</span>
            </div>
        </div>

        <!-- تاريخ الإجازة -->
        <div class="row">
            <div class="col">
                <label class="field">المدة:&nbsp;&nbsp;<span>@Model.ActualDays يوم</span></label>
                
            </div>
            <div class="col">
                
                <label class="field">من:&nbsp;&nbsp;<span>@Model.StartDate?.ToString("yyyy/MM/dd")</span></label>
                
            </div>
            <div class="col">
                <label class="field">إلى:&nbsp;&nbsp;<span>@Model.EndDate?.ToString("yyyy/MM/dd")</span></label>
                
            </div>
            
        </div>

        <!-- السبب -->
        <div class="row">
            <div class="col">
                <label class="field">القائم بالعمل:</label>
                
            </div>
            <div class="col">
                <label class="field">توقيع طالب الاجازة :</label>
               
            </div>
        </div>
        <div class="row">تحريرا في @DateTime.Now.ToString("yyyy/MM/dd")</div>
        <!-- جدول الرصيد (اعتيادي / عارضة فقط) -->
        @if (Model.LeaveTypeId == 1 || Model.LeaveTypeId == 2 || Model.LeaveTypeId == 5)
        {
            <h3 style="text-align:center">بيانات تستوفي بمعرفة شئون الافراد</h3>
            <table class="details">
                <thead>
                    <tr>
                        <th>الاجازات الاعتيادي المستحقة عن السنه المالية</th>
                        <th>الاجازات الاعتيادي السابق منحها عن السنه</th>
                        <th> الرصيد المتبقي</th>

                    </tr>
                    
                </thead>
                <tbody>
                    <tr>
                        <td>@((int)Model.TotalDays)</td>
                        <td>@((int)Model.UsedDays)</td>
                        <td>@Model.RemainingAfter</td>
                   </tr>
                    <tr>
                        <th>الاجازات العارضة المستحقة عن السنه المالية</th>
                        <th>الاجازات العارضة السابق منحها عن السنه</th>
                        <th> الرصيد المتبقي</th>

                    </tr>
                   <tr>
                        <td>@((int)Model.CasualTotalDays)</td>
                        <td>@((int)Model.CasualUsedDays)</td>
                        <td>@Model.CasualRemainingDays</td>
                   </tr>
                </tbody>
            </table>
        }

        <!-- المرفق الطبي — يظهر للمرضية فقط -->
        @if (Model.LeaveTypeId == 3)
        {
            <div class="attachment-box">
                <h4>المرفق الطبي</h4>

                @if (string.IsNullOrEmpty(Model.AttachmentPath))
                {
                    <p>لا يوجد ملف مرفق.</p>
                }
                else
                {
                    var ext = System.IO.Path.GetExtension(Model.AttachmentPath).ToLower();

                    if (ext == ".jpg" || ext == ".jpeg" || ext == ".png")
                    {
                        <img class="attachment-img" src="@Url.Content(Model.AttachmentPath)" />
                        <p>📄 ملف </p>
                        <a href="@Url.Content(Model.AttachmentPath)" target="_blank">عرض المرفق</a>
                    }
                    else if (ext == ".pdf")
                    {
                        <p>📄 ملف PDF</p>
                        <a href="@Url.Content(Model.AttachmentPath)" target="_blank">عرض المرفق</a>
                    }
                    else
                    {
                        <a href="@Url.Content(Model.AttachmentPath)" target="_blank">تحميل الملف</a>
                    }
                }
            </div>
        }

        <!-- توقيعات -->
        <div class="row" style="margin-top:25px;">
            <div class="col">توقيع شئون الافراد: ____________________</div>
            <div class="col">موافقة مسؤل الادارة: ____________________</div>
            <div class="col">اعتماد المدير: ____________________</div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col">وتفضلوا بقبول وافر الاحترام</div>
            <div class="col"></div>
        </div>
    </div>
</div>
