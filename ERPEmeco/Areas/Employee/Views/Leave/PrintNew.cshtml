@model VM.ViewModels.EmployeeLeaveVM
@{
    Layout = "_Layout";
}

<meta charset="utf-8">
<title>نموذج طلب إجازة</title>

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background: #f6f6f6;
        margin: 0;
        padding: 0;
    }

    .content-wrapper {
        flex: unset; /* أو flex: initial; */
    }

    .page {
        width: 100%;
        max-width: 900px;
        margin: 20px auto;
        margin-top: -20px auto;
        background: #fff;
        border: 2px solid #000;
        padding: 12px 16px;
        box-sizing: border-box;
    }

    header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
    }

    .logo {
        width: 150px;
        height: 90px;
        border: 1px solid #000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logo img {
        max-width: 100%;
        max-height: 100%;
    }

    .header-text {
        flex: 1;
        text-align: center;
    }

    .header-text h1 {
        margin: 0;
        font-size: 22px;
        font-weight: 700;
    }

    .header-meta {
        font-size: 13px;
        color: #555;
    }

    .form-grid {
        border: 1px solid #000;
        padding: 8px;
        margin-top: 8px;
    }

    .row {
        display: flex;
        /* gap: 8px; */
        margin-bottom: 6px;
        align-items: center;
    }

    .col {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    label.field {
        font-weight: 600;
        font-size: 13px;
        margin-bottom: 2px;
    }

    .value {
        border: 1px solid #000;
        padding: 6px;
        min-height: 22px;
        font-size: 13px;
        background: #fafafa;
    }

    .row.flex-labels {
        flex-direction: row;
        align-items: center;
    }

    .row.flex-labels .col {
        flex-direction: row;
        align-items: center;
        gap: 6px;
    }

    table.details {
        width: 60%;
        margin: 10px auto;
        border-collapse: collapse;
        font-size: 13px;
    }

    table.details th, table.details td {
        border: 1px solid #000;
        padding: 6px;
        text-align: center;
    }

    table.details th {
        background: #eee;
        font-weight: 600;
    }

    .sigs {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        text-align: center;
    }

    .sig-box {
        flex: 1;
        min-height: 60px;
        font-size: 13px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #000;
        padding: 6px;
        box-sizing: border-box;
    }

    .footer {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
        font-size: 12px;
    }

    .stamp {
        border: 1px dashed #000;
        padding: 6px;
        min-width: 140px;
        text-align: center;
    }

    .no-print {
        text-align: center;
        margin: 20px;
    }

    /* إعداد الطباعة */
    @@media print {
        @@page {
            size: A5 landscape;
            margin: 5mm;
        }

        body {
            background: #fff !important;
            padding: 0 !important;
        }

        body * {
            visibility: hidden;
        }

        .page, .page * {
            visibility: visible;
        }

        .page {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            border: 2px solid #000;
            padding: 12px 16px;
            box-sizing: border-box;
        }

        .no-print {
            display: none !important;
        }
    }
</style>
<!-- زر الطباعة -->
<div class="no-print">
    <button onclick="window.print()">🖨️ طباعة النموذج</button>
</div>
<div class="page">
    <header>
        <div class="logo"><img src="~/assets/img/Logo/lg.png" alt="شعار"></div>
        <div class="header-text">
            <h1>طلب إجازة اعتيادي</h1>
            <div class="header-meta">
                نظام الموارد البشرية — تاريخ التحرير: <strong>@DateTime.Now.ToString("yyyy/MM/dd")</strong>
            </div>
        </div>
    </header>

    <div class="form-grid">
        <!-- بيانات الموظف -->
        <div class="row flex-labels">
            <div class="col-6">
                <label class="field">الموظف:</label>
                <span>@Model.EmployeeName</span>
            </div>
            <div class="col-3">
                <label class="field">الكود:</label>
                <span>@Model.EmployeeCode</span>
            </div>
            <div class="col-3">
                <label class="field">الإدارة:</label>
                <span>@Model.DepartmentName</span>
            </div>
        </div>




        <!-- تاريخ الإجازة والمدة -->
        <div class="row flex-labels">
            <div class="col-6">
                <label class="field">من:</label>
                <span>@Model.StartDate?.ToString("yyyy/MM/dd")</span>
            </div>
            <div class="col-3">
                <label class="field">إلى:</label>
                <span>@Model.EndDate?.ToString("yyyy/MM/dd")</span>
            </div>
            <div class="col-3">
                <label class="field">المدة:</label>
                <span>@ViewBag.RequiredVacationDays يوم</span>
            </div>
        </div>

        <!-- جدول الإجازات -->
        <table class="details">
            <thead>
                <tr>
                    <th>النوع</th>
                    <th>عادية</th>
                </tr>
            </thead>
            <tbody>
                @{
                    string TotalDays = string.Format("{0:0.##}", @Model.TotalDays);
                    string UsedDays = string.Format("{0:0.##}", @Model.UsedDays);
                    string RemainingBalance = string.Format("{0:0.##}", @Model.TotalDays - @Model.UsedDays - @ViewBag.RequiredVacationDays);
                }
                <tr>
                    <td>الإجازة السنوية</td>
                    <td>@TotalDays</td>
                </tr>
                <tr>
                    <td>الإجازة السابق منحها</td>
                    <td>@UsedDays</td>
                </tr>
                <tr>
                    <td>الرصيد المتبقي</td>
                    <td>@RemainingBalance</td>
                </tr>
            </tbody>
        </table>

        <!-- التواقيع -->
        <div class="row flex-labels">
            <div class="col-6">توقيع الموظف</div>
            <div class="col-3">موافقة المشرف</div>
            <div class="col-3">تصديق المدير</div>
            <br />
            <br />
            <br />
        </div>       
    </div>
</div>


