    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.LeaveTypeName</td>
                <td>@item.StartDate?.ToString("yyyy/MM/dd")</td>
                <td>@item.EndDate?.ToString("yyyy/MM/dd")</td>
                <td>@item.Reason</td>
                <td>
                    @if (item.FinalApproval == false)
                    {
                        <input type="checkbox" class="activateLeave" data-id="@item.Id" />
                    }
                    else
                    {
                        <span class="text-success">تم القبول</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("PrintNew", "Leave", new { id = item.Id, area = "Employee" })" class="btn btn-info btn-sm">طباعة</a>
                </td>
            </tr>
        }
    </tbody>
</table> 

<a href="@Url.Action("Create", "Leave", new { area = "Employee" })" class="btn btn-primary">إضافة إجازة جديدة</a>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".activateLeave").change(function () {
                var checkbox = $(this);
                var leaveId = checkbox.data("id");

                if (confirm("هل أنت متأكد من تفعيل هذه الإجازة؟")) {
                    $.ajax({
                        url: '@Url.Action("ActivateLeave", "Leave", new { area = "Employee" })',
                        type: 'POST',
                        data: { id: leaveId },
                        success: function (response) {
                            if (response.success) {
                                checkbox.replaceWith('<span class="text-success">تم القبول</span>');
                            } else {
                                alert("حدث خطأ أثناء تفعيل الإجازة");
                                checkbox.prop("checked", false);
                            }
                        },
                        error: function () {
                            alert("حدث خطأ أثناء الاتصال بالخادم");
                            checkbox.prop("checked", false);
                        }
                    });
                } else {
                    checkbox.prop("checked", false);
                }
            });
        });
    </script>
}
