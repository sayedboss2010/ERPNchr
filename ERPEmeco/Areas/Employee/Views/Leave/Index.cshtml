@model IEnumerable<VM.ViewModels.EmployeeLeaveVM>

@{
    ViewBag.Title = "قائمة الإجازات";
    Layout = "_Layout";

    int currentUserType = Context.Request.Cookies.ContainsKey("UserType")
        ? int.Parse(Context.Request.Cookies["UserType"])
        : 0;
}

<h2 class="text-center">قائمة الإجازات</h2>
<hr />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الموظف</th>
            <th>نوع الإجازة</th>
            <th>من</th>
            <th>إلى</th>
            <th>عدد الأيام</th>
            <th>السبب</th>
            <th>حالة الإجازة</th>
            <th>خيارات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.LeaveTypeName</td>
                <td>@item.StartDate?.ToString("yyyy/MM/dd")</td>
                <td>@item.EndDate?.ToString("yyyy/MM/dd")</td>
                <td>@item.LeaveDays</td>
                <td>@item.Reason</td>

                <td>
                    @* =======================
                       الموظف العادي
                       ======================= *@
                    @if (currentUserType == 1)
                    {
                        <div>
                            المدير المباشر:
                            @if (item.DirectManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DirectManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <span class="text-warning">في انتظار موافقة المدير المباشر</span>
                            }
                        </div>

                        <div>
                            مدير القطاع:
                            @if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <span class="text-warning">في انتظار موافقة مدير القطاع</span>
                            }
                        </div>
                    }

                    @* =======================
                       المدير المباشر
                       ======================= *@
                    else if (currentUserType == 2)
                    {
                        @* لو الإجازة إجازته هو → لا يوافق *@
                        if (item.EmployeeUserType == 2)
                        {
                            if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول من مدير القطاع</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض من مدير القطاع</span>
                            }
                            else
                            {
                                <span class="text-warning">في انتظار موافقة مدير القطاع</span>
                            }
                        }
                        else
                        {
                            @* إجازة موظف عادي *@
                            if (item.DirectManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DirectManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <button class="btn btn-success approveBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="direct" data-employeeusertype="@item.LeaveTypeId">قبول</button>
                                <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="direct" data-employeeusertype="@item.LeaveTypeId">رفض</button>
                            }
                        }
                    }

                    @* =======================
                       مدير القطاع
                       ======================= *@
                    else if (currentUserType == 3)
                    {
                        @* إجازة مدير مباشر *@
                        if (item.EmployeeUserType == 2)
                        {
                            if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <button class="btn btn-success approveBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="sector" data-employeeusertype="@item.LeaveTypeId">قبول</button>
                                <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="sector" data-employeeusertype="@item.LeaveTypeId">رفض</button>
                            }
                        }
                        else if (item.EmployeeUserType == 3)
                        {
                            if (item.DepartmentManagerApproval == true)
                            {
                                <span class="text-success">تم القبول</span>
                            }
                            else if (item.DepartmentManagerApproval == false)
                            {
                                <span class="text-danger">تم الرفض</span>
                            }
                            else
                            {
                                <button class="btn btn-success approveBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="sector" data-employeeusertype="@item.LeaveTypeId">قبول</button>
                                <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="sector" data-employeeusertype="@item.LeaveTypeId">رفض</button>
                            }
                        }
                            else
                        {
                            @* إجازة موظف عادي *@
                            if (item.DirectManagerApproval == null)
                            {
                                <span class="text-warning">
                                    في انتظار موافقة المدير المباشر
                                </span>
                            }
                            else
                            {
                                if (item.DepartmentManagerApproval == true)
                                {
                                    <span class="text-success">تم القبول</span>
                                }
                                else if (item.DepartmentManagerApproval == false)
                                {
                                    <span class="text-danger">تم الرفض</span>
                                }
                                else
                                {
                                     <button class="btn btn-success approveBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="sector" data-employeeusertype="@item.LeaveTypeId">قبول</button>
                                    <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-actualdays="@item.LeaveDays" data-type="sector" data-employeeusertype="@item.LeaveTypeId">رفض</button>
                                }
                            }
                        }
                    }
                </td>

                <td>
                    <a href="@Url.Action("PrintNew", "Leave",
                        new { id = item.Id, area = "Employee" })"
                       class="btn btn-info btn-sm">
                        طباعة
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Leave", new { area = "Employee" })"
   class="btn btn-primary">
    إضافة إجازة جديدة
</a>

@section Scripts {
   
    <script>
        $(document).ready(function () {
            $(".activateLeave").change(function () {
                var checkbox = $(this);
                var leaveId = checkbox.data("id");

                if (confirm("هل أنت متأكد من تفعيل هذه الإجازة؟")) {
                    $.ajax({
                        url: '@Url.Action("ActivateLeave", "Leave", new { area = "Employee" })',
                        type: 'POST',
                        data: { id: leaveId },
                        success: function (response) {
                            if (response.success) {
                                checkbox.replaceWith('<span class="text-success">تم القبول</span>');
                            } else {
                                alert("حدث خطأ أثناء تفعيل الإجازة");
                                checkbox.prop("checked", false);
                            }
                        },
                        error: function () {
                            alert("حدث خطأ أثناء الاتصال بالخادم");
                            checkbox.prop("checked", false);
                        }
                    });
                } else {
                    checkbox.prop("checked", false);
                }
            });
        });
        $(".approveBtn, .rejectBtn").click(function () {
    var id = $(this).data("id");
    var type=$(this).data("type");
    var actualdays=$(this).data("actualdays");
    var employeeusertype =$(this).data("employeeusertype")
    var isApproved = $(this).hasClass("approveBtn");
    $.post("/Employee/Leave/DirectManagerAction",
                { id: id, isApproved: isApproved,type:type,ActualDays:actualdays,EmployeeUsertype:employeeusertype },
       
        function (response) {
            alert(response.message);
            if (response.success) {
                location.reload();
            }
        });
});


    </script>
}
