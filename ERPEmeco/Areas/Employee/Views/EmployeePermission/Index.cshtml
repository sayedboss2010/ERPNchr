@model IEnumerable<VM.ViewModels.Employee.EmployeePermissionVM>
@{
    ViewBag.Title = "قائمة الاذونات";
    Layout = "_Layout";
}

<h2 class="text-center">قائمة الاذونات</h2>
<hr />
<form method="get" asp-action="Index" class="row mb-3">
    <div class="col-md-4">
        <input type="text"
               name="search"
               value="@Context.Request.Query["search"]"
               class="form-control"
               placeholder="بحث باسم الموظف أو نوع الإذن" />
    </div>

    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">بحث</button>

        <a href="@Url.Action("Index", "EmployeePermission", new { area = "Employee" })"
           class="btn btn-secondary">
            عرض الكل
        </a>
    </div>
</form>

 <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>الموظف</th>
            <th>نوع الاذن</th>
            <th>تاريخ الاذن</th>
           
            <th>خيارات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmplyeeName</td>
                <td>@item.PermissionTypeName</td>
                <td>@item.DateOfPermission?.ToString("yyyy/MM/dd")</td>
                
               
                 @{
    var req = Context.Request;
    int currentUserType = req.Cookies.ContainsKey("UserType")
                          ? int.Parse(req.Cookies["UserType"])
                          : 0;
}

<td>
    <span> حالة الإجازة  :</span>

    @* ============================
       1) الموظف العادي (UserType = 1)
       ============================ *@
    @if (currentUserType == 1)
    {
        if (item.DirectManagerApproval == true)
        {
            <span class="text-success">تم القبول من المدير المباشر</span>
        }
        else if (item.DirectManagerApproval == false)
        {
            <span class="text-danger">تم الرفض من المدير المباشر</span>
        }
        else
        {
            <span class="text-warning">في انتظار موافقة المدير المباشر</span>
        }

        <br />

        if (item.DepartmentManagerApproval == true)
        {
            <span class="text-success">تم القبول من مدير القطاع</span>
        }
        else if (item.DepartmentManagerApproval == false)
        {
            <span class="text-danger">تم الرفض من مدير القطاع</span>
        }
        else
        {
            <span class="text-warning">في انتظار موافقة مدير القطاع</span>
        }
    }


    @* ============================
       2) المدير المباشر (UserType = 2)
       ============================ *@
    else if (currentUserType == 2)
    {
          if (item.DepartmentManagerApproval == true)
        {
            <span class="text-success">تم القبول من مدير القطاع</span>
        }
        else if (item.DepartmentManagerApproval == false)
        {
            <span class="text-danger">تم الرفض من مدير القطاع</span>
        }
        else
        {
            <span class="text-warning">في انتظار موافقة مدير القطاع</span>
        }
         <br />
        if (item.DirectManagerApproval == true)
        {
            <span class="text-success">تم القبول</span>
        }
        else if (item.DirectManagerApproval == false)
        {
            <span class="text-danger">تم الرفض</span>
        }
        else
        {
            <button class="btn btn-success approveBtn" data-id="@item.Id" data-type="direct">قبول</button>
            <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-type="direct">رفض</button>
        }
    }


    @* ============================
       3) مدير القطاع (UserType = 3)
       ============================ *@
    else if (currentUserType == 3)
    {
        @* ❶ لو المدير المباشر لسه ما وافقش أو رفض *@
        if (item.DirectManagerApproval == null)
        {
            <span class="text-warning">في انتظار موافقة المدير المباشر</span>
        }
        else
        {
            @* ❷ عرض حالة المدير المباشر *@
            if (item.DirectManagerApproval == true)
            {
                <span class="text-success">تم قبول الإجازة من المدير المباشر</span>
            }
            else
            {
                <span class="text-danger">تم رفض الإجازة من المدير المباشر</span>
            }

            <br />

            @* ❸ الآن يظهر أزرار المدير القطاع *@
            if (item.DepartmentManagerApproval == true)
            {
                <span class="text-success">تم القبول من مدير القطاع</span>
            }
            else if (item.DepartmentManagerApproval == false)
            {
                <span class="text-danger">تم الرفض من مدير القطاع</span>
            }
            else
            {
                <button class="btn btn-success approveBtn" data-id="@item.Id" data-type="sector">قبول</button>
                <button class="btn btn-danger rejectBtn" data-id="@item.Id" data-type="sector">رفض</button>
            }
        }
    }
</td>
                <td>
                    <a href="@Url.Action("PrintPermissionNew", "EmployeePermission", new { id = item.Id, area = "Employee" })" class="btn btn-info btn-sm">طباعة</a>
                </td>
            </tr>
        }
    </tbody>
</table> 

<a href="@Url.Action("Create", "EmployeePermission", new { area = "Employee" })" class="btn btn-primary">إضافة اذن</a>

@section Scripts {
    <script>
        $(document).ready(function () {
              $(".approveBtn, .rejectBtn").click(function () {
    var id = $(this).data("id");
    var type=$(this).data("type");
    var isApproved = $(this).hasClass("approveBtn");

    $.post("/Employee/EmployeePermission/DirectManagerAction",
        { id: id, isApproved: isApproved,type:type },
       
        function (response) {
            alert(response.message);
            if (response.success) {
                location.reload();
            }
        });
});



            $(".activateLeave").change(function () {
                var checkbox = $(this);
                var leaveId = checkbox.data("id");

                if (confirm("هل أنت متأكد من تفعيل هذه الإجازة؟")) {
                    $.ajax({
                        url: '@Url.Action("ActivateLeave", "Leave", new { area = "Employee" })',
                        type: 'POST',
                        data: { id: leaveId },
                        success: function (response) {
                            if (response.success) {
                                checkbox.replaceWith('<span class="text-success">تم القبول</span>');
                            } else {
                                alert("حدث خطأ أثناء تفعيل الإجازة");
                                checkbox.prop("checked", false);
                            }
                        },
                        error: function () {
                            alert("حدث خطأ أثناء الاتصال بالخادم");
                            checkbox.prop("checked", false);
                        }
                    });
                } else {
                    checkbox.prop("checked", false);
                }
            });
        });
    </script>
}
